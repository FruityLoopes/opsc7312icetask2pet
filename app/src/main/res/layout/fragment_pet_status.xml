<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#142AED"
    tools:context=".PetStatusFragment">

    <ImageView
        android:id="@+id/Statusimage"
        android:layout_width="240dp"
        android:layout_height="106dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="38dp"
        android:background="@color/white"
        android:src="@drawable/resource_default"
        app:layout_constraintBottom_toTopOf="@+id/textViewName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/resource_default" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="109dp"
        android:layout_height="31dp"
        android:layout_gravity="center"
        android:layout_marginBottom="17dp"
        android:text="Pet Name: Polly"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Statusimage" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="114dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="33dp"
        android:text="Hunger"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/textViewHunger"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewName" />

    <TextView
        android:id="@+id/textViewHapp"
        android:layout_width="0dp"
        android:layout_height="21dp"
        android:layout_marginEnd="112dp"
        android:background="@color/black"
        android:text="___"
        android:textColor="@color/white"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="114dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="31dp"
        android:text="Hapiness"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/textViewClean"
        app:layout_constraintEnd_toStartOf="@+id/textViewHapp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="4dp"
        android:text="Cleanlines"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/textViewClean"
        app:layout_constraintEnd_toStartOf="@+id/textViewClean"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewClean"
        android:layout_width="92dp"
        android:layout_height="25dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="352dp"
        android:background="@color/black"
        android:text="___"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textViewHunger"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="54dp"
        android:background="@color/black"
        android:text="___"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/textViewHapp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textViewName" />

</androidx.constraintlayout.widget.ConstraintLayout>